<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CraftMyFit.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Title="Login">

    <ScrollView>
        <StackLayout Padding="40" VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="logo.png" 
                   WidthRequest="100" 
                   HeightRequest="100" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>

            <!-- Titolo -->
            <Label Text="CraftMyFit" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Label Text="Accedi al tuo account" 
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>

            <!-- Pulsante demo login -->
            <Button x:Name="LoginButton"
                    Text="Accedi (Demo)" 
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="0,12"
                    Clicked="OnLoginClicked"/>

            <!-- Info demo -->
            <Label Text="Usa credenziali demo per accedere" 
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"
                   Opacity="0.7"/>

        </StackLayout>
    </ScrollView>
</ContentPage>